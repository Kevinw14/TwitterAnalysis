<Window x:Class="TwitterAnalysis.TweetSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterAnalysis"
        mc:Ignorable="d"
        Title="TweetSearchWindow" Height="450" Width="800">
    <ScrollViewer>
        <Grid x:Name="QueryGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <local:TAAndOrRadioButton Grid.Column="0" Grid.Row="0" x:Name="AndOrRadioButton"/>
        </Grid>
    </ScrollViewer>
</Window>
