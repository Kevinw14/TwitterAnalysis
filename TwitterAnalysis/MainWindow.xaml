<Window x:Class="TwitterAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterAnalysis"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <DataGrid x:Name="TweetsTable" Margin="0,66,0,0" IsReadOnly="True"/>
            <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="437,25,0,0" VerticalAlignment="Top" Click="SearchButton_Click"/>
            <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Margin="50,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337"/>
        </Grid>
    </Grid>
</Window>
